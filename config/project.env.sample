# Copy to config/project.env and adjust.
# cp config/project.env.sample config/project.env

# Network
UBL_GATE_BIND=127.0.0.1:4000

# Logging
RUST_LOG=info

# Core runtime safety defaults
REQUIRE_UNC1_NUMERIC=true
F64_IMPORT_MODE=reject

# Optional: token for private/internal UBL-CORE access (clone/lock validation)
# CORE_REPO_TOKEN=ghp_xxx

# Core-only features by default (you can enable later)
UBL_FEATURE_AUDIT_ENABLED=false
UBL_FEATURE_ADVISOR_ENABLED=false
UBL_FEATURE_MCP_ENABLED=false

# Storage paths (local machine)
CAS_BACKEND=fs
CAS_FS_DIR=./data/cas
LEDGER_DIR=./data/ledger
INDEX_DIR=./data/index
EVENTSTORE_DIR=./data/eventstore
